
@model IEnumerable<StampSystem.Models.RegistrationRequest>

@{
    ViewData["Title"] = "طلبات التسجيل";
}

<h2>طلبات التسجيل</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الرقم الوظيفي</th>
            <th>الهوية</th>
            <th>البريد</th>
            <th>الإدارة</th>
            <th>الدور</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.FullName</td>
                <td>@req.EmployeeId</td>
                <td>@req.NationalID</td>
                <td>@req.Email</td>
                <td>@req.AdministrationName</td>
                <td>@req.Role</td>
                <td>
                    <a asp-action="Approve" asp-route-id="@req.Id" class="btn btn-success btn-sm">قبول</a>
                    <a asp-action="Reject" asp-route-id="@req.Id" class="btn btn-danger btn-sm">رفض</a>
                </td>
            </tr>
        }
    </tbody>
</table>
