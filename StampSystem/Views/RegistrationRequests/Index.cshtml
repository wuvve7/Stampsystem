@model IEnumerable<ApplicationUser>
<partial name="_Notification"/>
<table>
    <thead>
        <tr>
            <th>الاسم الكامل</th>
            <th>البريد</th>
            <th>الحالة</th>
            <th>سبب الرفض</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.Status</td>
            <td>@user.RejectionReason</td>
            <td>
                @if(user.Status != "Approved")
                {
                    <form asp-action="Approve" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit">موافقة</button>
                    </form>
                }
                @if(user.Status != "Rejected")
                {
                    <button data-toggle="modal" data-target="#rejectModal_@user.Id">رفض</button>

                    <div class="modal fade" id="rejectModal_@user.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Reject" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <textarea name="reason" required placeholder="سبب الرفض"></textarea>
                                    <button type="submit">رفض</button>
                                    <button type="button" data-dismiss="modal">إلغاء</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

                                   