<table>
    <thead>...</thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.FullName</td>
                <!-- بيانات أخرى -->
                <td>
                    <form asp-action="Approve" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@request.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#rejectModal_@request.Id">Reject</button>

                    <!-- نموذج الرفض modal -->
                    <div class="modal fade" id="rejectModal_@request.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Reject" method="post">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <textarea name="reason" required></textarea>
                                    <button type="submit" class="btn btn-danger">Reject</button>
                                    <button type="button" data-dismiss="modal">Cancel</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
