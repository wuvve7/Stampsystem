@model IEnumerable<StampSystem.Models.RegistrationRequest>

@{
    ViewData["Title"] = "طلباتي";
}

<h2>طلباتي</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>تاريخ الطلب</th>
            <th>الدور</th>
            <th>الإدارة</th>
            <th>الحالة</th>
            <th>سبب الرفض</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.CreatedAt.ToString("yyyy/MM/dd")</td>
                <td>@req.Role</td>
                <td>@req.AdministrationName</td>
                <td>@req.Status</td>
                <td>@(req.Status == "Rejected" ? req.RejectionReason : "-")</td>
            </tr>
        }
    </tbody>
</table>
