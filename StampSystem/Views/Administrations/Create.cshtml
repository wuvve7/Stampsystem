@model StampSystem.Models.Section

@{
    ViewData["Title"] = "إنشاء قسم جديد";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">اسم القسم</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeadName" class="control-label">اسم رئيس القسم</label>
        <input asp-for="HeadName" class="form-control" />
        <span asp-validation-for="HeadName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdministrationId" class="control-label">الإدارة</label>
        <select asp-for="AdministrationId" class="form-control"
                asp-items="@(new SelectList(ViewBag.AdministrationId, "Value", "Text"))">
            <option value="">-- اختر الإدارة --</option>
        </select>
        <span asp-validation-for="AdministrationId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">عودة</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
