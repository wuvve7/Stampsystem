@page
@model HRReviewModel
@{
    ViewData["Title"] = "HR Review";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.PendingUsers)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Status</td>
                <td>
                    <form method="post">
                        <button type="submit" class="btn btn-success" asp-page-handler="Approve" asp-route-userId="@user.Id" asp-route-position="Manager" asp-route-unit="Unit1">Approve</button>
                        <button type="submit" class="btn btn-danger" asp-page-handler="Reject" asp-route-userId="@user.Id" asp-route-reason="Incomplete Information">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
